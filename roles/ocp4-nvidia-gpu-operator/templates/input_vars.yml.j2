platform:
  openshift: true
{% if ocp_version is version('4.7', '==') %}
operator:
  validator:
    version: vectoradd-cuda10.2-ubi8
  defaultRuntime: crio
nfd:
  enabled: false
devicePlugin:
  version: v0.8.2-ubi8
dcgmExporter:
  version: 2.1.4-2.2.0-ubi8
toolkit:
  version: 1.4.7-ubi8
{% endif %}
{% if ocp_type == 'okd' %}
driver:
  repository: image-registry.openshift-image-registry.svc:5000/{{ gpu_operator_namespace }}
  image: driver
  version: "{{ nvidia_driver_version }}"
  imagePullPolicy: Always
{% endif %}